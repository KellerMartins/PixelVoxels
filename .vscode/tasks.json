{
    "version": "0.1.0",
    "command": "%CD:~0,3%MinGW/bin/mingw32-make",
    "args": [
        "PD=%CD:~0,2%","PATH=%CD:~0,3%MinGW/bin"
    ],
    "isShellCommand": true,
    "tasks": [
        {
            "taskName": "Makefile",
            // Make this the default build command.
            // Show the output window only if unrecognized errors occur.
            "showOutput": "silent",
            "isBuildCommand": true,
            "echoCommand": false,
            // No args
            "args": ["all"],
            // Use the standard less compilation problem matcher.
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}